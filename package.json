{
    "type": "module",
    "private": true,
    "packageManager": "pnpm@8.9.2",
    "engines": {
        "node": ">=18.0.0"
    },
    "scripts": {
        "preinstall": "npx only-allow pnpm",
        "postinstall": "nuxt prepare",
        "dev": "nuxt dev",
        "build": "nuxt build",
        "generate": "nuxt generate",
        "preview": "nuxt preview",
        "typecheck": "nuxt typecheck",
        "cleanup": "nuxt cleanup && pnpm postinstall",
        "upgrade:nuxt": "nuxt upgrade --force",
        "test": "vitest --config vitest.config.ts",
        "lint": "eslint . --ignore-path .gitignore",
        "lint:fix": "pnpm lint --fix",
        "format": "prettier --check .",
        "format:fix": "prettier --write .",
        "lf": "pnpm lint:fix && pnpm format:fix",
        "cleanup:nm": "nuxt cleanup && rimraf node_modules && pnpm install"
    },
    "dependencies": {
        "@floating-ui/vue": "1.0.2",
        "@pinia/nuxt": "0.5.1",
        "@tinymce/tinymce-vue": "5.1.1",
        "@vee-validate/nuxt": "4.11.8",
        "@vee-validate/yup": "4.11.8",
        "pinia": "2.1.7",
        "yup": "1.3.2"
    },
    "devDependencies": {
        "@antfu/eslint-config-vue": "0.42.1",
        "@commitlint/cli": "18.1.0",
        "@commitlint/config-conventional": "18.1.0",
        "@egoist/tailwindcss-icons": "1.4.0",
        "@element-plus/nuxt": "1.0.6",
        "@iconify-json/ep": "1.1.12",
        "@iconify-json/fa6-solid": "1.1.15",
        "@nuxt/devtools": "1.0.0",
        "@nuxtjs/i18n": "8.0.0-rc.2",
        "@tailwindcss/forms": "0.5.6",
        "@tailwindcss/typography": "0.5.10",
        "@types/node": "20.8.9",
        "@vueuse/core": "10.5.0",
        "@vueuse/nuxt": "10.5.0",
        "autoprefixer": "10.4.16",
        "dotenv": "16.3.1",
        "element-plus": "2.4.1",
        "eslint": "8.52.0",
        "eslint-config-prettier": "9.0.0",
        "eslint-plugin-prettier": "5.0.1",
        "lint-staged": "15.0.2",
        "nuxt": "^3.8.0",
        "postcss": "8.4.31",
        "prettier": "3.0.3",
        "prettier-plugin-tailwindcss": "0.5.6",
        "rimraf": "5.0.5",
        "sass": "1.69.5",
        "simple-git-hooks": "2.9.0",
        "tailwindcss": "3.3.5",
        "typescript": "5.2.2",
        "vitest": "0.34.6",
        "vue-tsc": "1.8.21"
    },
    "simple-git-hooks": {
        "commit-msg": "npx --no -- commitlint --edit \"$1\"",
        "pre-commit": "npx lint-staged"
    },
    "lint-staged": {
        "*.{vue,js,cjs,mjs,ts,cts,mts,json,md,yaml}": "pnpm lint",
        "*": "pnpm format"
    }
}
